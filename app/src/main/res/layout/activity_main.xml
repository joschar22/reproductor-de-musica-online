<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
  <LinearLayout
      android:background="@drawable/fondo"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:orientation="horizontal">
    <ImageView
        android:layout_width="220dp"
        android:layout_height="270dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/logo"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textColor="#42F8C4"
        android:text="MUSIC STREAMING"
        android:textSize="25dp"
        android:layout_marginVertical="350dp"
        android:layout_marginLeft="-200dp"/>
    <TextView
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginVertical="420dp"
        android:layout_marginLeft="-250dp"
        android:text="Musica online gratis"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />
    <ImageView
        android:id="@+id/imagePlay"
        android:layout_width="11dp"
        android:layout_height="80dp"
        android:layout_marginLeft="-250dp"
        android:layout_marginTop="540dp"
        android:layout_weight="0.1"
        android:background="@drawable/play" />
    <ImageView
        android:id="@+id/btnStop"
        android:layout_width="54dp"
        android:layout_height="86dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="540dp"
        android:layout_weight="0.1"
        android:contentDescription="Click para parar la radio"
        android:src="@drawable/stop"/>
  </LinearLayout>
</LinearLayout>